{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./backend",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["backend/src", "backend/graphql", "backend/prisma"],
  "exclude": ["node_modules", "dist"]
}
